#!/usr/bin/env sh

mkdir -p ~/.tto
curl -L https://github.com/ixre/tto/releases/download/v0.3.23/tto-generator-bin.tar.gz | tar xz -C ~/.tto
#curl -L http://bz.xiangruigd.com:8081/tto-generator-bin.tar.gz|tar xz -C ~/.tto
GOOS=$(uname)
if [ "$GOOS" =  'Darwin' ]; then
  sudo mv ~/.tto/mac-tto /usr/local/bin/tto
elif [ "$GOOS" = 'Windows' ] ||  \
     [ "${GOOS:0:5}" = 'MINGW' ] || \
     [ "${GOOS:0:6}" = 'Cygwin' ]; then
  mv ~/.tto/tto.exe "$WINDIR\system32"
else
  sudo mv ~/.tto/tto /usr/local/bin
fi
rm -rf ~/.tto && echo "恭喜,安装成功!"



