#!target:xml/pgsql/{{.table.Prefix}}/{{.table.Title}}List.xml
<?xml version="1.0" encoding="utf-8" ?>
<ExportItemConfig>
    <ColumnMapping>
    {{range $i,$v := .columns}}{{if ne $i 0}};{{end}}{{$v.Name}}:{{$v.Comment}}{{end}}
    </ColumnMapping>
    <Query>
        <![CDATA[
        SELECT * FROM "{{.table.Name}}"
        WHERE {where}
        ORDER BY {order_by} DESC LIMIT {page_size} OFFSET {page_offset}
     ]]>
    </Query>
    <Import><![CDATA[]]></Import>
    <Total>
        <![CDATA[
            SELECT COUNT({{.table.Pk }}) FROM "{{.table.Name}}"
            WHERE {where}
        ]]>
    </Total>
</ExportItemConfig>
